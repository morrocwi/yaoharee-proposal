% ===================== Chapter 13 =====================
\section{Robust Solutions of $A\varepsilon=\delta$: Conditioning, Bounds, and Diagnostics}

\subsection{Models: square and overdetermined closures}
\paragraph{Square (canonical H0--H4).}
Let $A\in\mathbb R^{4\times 4}$ be the Jacobian from Chapter~4 with $\det A\neq0$.
The seed closure solves
\begin{equation}
A\varepsilon=\delta,\qquad \varepsilon=A^{-1}\delta.
\label{eq:seed_square}
\end{equation}

\paragraph{Overdetermined (data-rich).}
Let $G\in\mathbb R^{m\times 4}$, $m\ge 4$, assemble additional near-unity
relations. With a symmetric weight $W\succeq0$ (often $W=\Sigma^{-1}$),
the weighted least-squares (WLS) estimator is
\begin{equation}
\hat\varepsilon=\arg\min_\varepsilon \|W^{1/2}(G\varepsilon-\delta)\|_2^2
=(G^\top W G)^{-1}G^\top W\delta,
\label{eq:WLS}
\end{equation}
whenever $\mathrm{rank}(G)=4$ and $G^\top W G\succ0$.

\subsection{Conditioning and perturbation bounds}
Write $\kappa_2(M)=\|M\|_2\|M^{-1}\|_2$ for the spectral condition number.

\paragraph{Square case.}
For small perturbations $(\Delta A,\Delta\delta)$, the first-order bound is
\begin{equation}
\frac{\|\Delta\varepsilon\|_2}{\|\varepsilon\|_2}
\ \lesssim\ \kappa_2(A)\Big(
\frac{\|\Delta A\|_2}{\|A\|_2} + \frac{\|\Delta\delta\|_2}{\|\delta\|_2}
\Big),
\qquad \Delta\varepsilon \approx A^{-1}(\Delta\delta-\Delta A\,\varepsilon).
\label{eq:pert_square}
\end{equation}
In particular, with exact $A$,
\begin{equation}
\|\Delta\varepsilon\|_2 \le \|A^{-1}\|_2\,\|\Delta\delta\|_2.
\label{eq:seed_sensitivity}
\end{equation}

\paragraph{WLS case.}
Let $C:=W^{1/2}$ and $\tilde G:=C G$, $\tilde\delta:=C\delta$. Then
\begin{equation}
\hat\varepsilon=\tilde G^{\dagger}\,\tilde\delta,\qquad
\|\Delta\hat\varepsilon\|_2\ \le\ \|\tilde G^{\dagger}\|_2\,\|\Delta\tilde\delta\|_2
\ =\ \sigma_{\min}(\tilde G)^{-1}\,\|\Delta\tilde\delta\|_2,
\label{eq:WLS_sensitivity}
\end{equation}
where $\sigma_{\min}(\tilde G)$ is the smallest singular value.

\subsection{Scaling and preconditioning (dimensionless, local)}
Although the algebra is in hats (dimensionless), numerical conditioning still
benefits from equilibration.

\paragraph{Diagonal equilibration.}
Choose diagonal $D_r\succ0$, $D_c\succ0$ to balance row/column magnitudes:
$\bar G:=D_r\,G\,D_c$. Solve $\bar G\,\bar\varepsilon=\bar\delta$ with
$\bar\varepsilon=D_c^{-1}\varepsilon$, $\bar\delta=D_r\,\delta$.
This reduces $\kappa_2$ while preserving invariance.

\paragraph{QR with column pivoting (QRCP).}
For $G$, compute $G\Pi = Q R$ with permutation $\Pi$. Then
\[
\hat\varepsilon=\Pi\,R_1^{-1}\,Q_1^\top\,\delta,
\]
where $R_1$ is the leading $4\times4$ block if $\mathrm{rank}(G)=4$.
QRCP avoids squaring the condition number (unlike normal equations).

\paragraph{Left preconditioning (WLS).}
With $C=W^{1/2}$, solve $\min_\varepsilon\|\tilde G\varepsilon-\tilde\delta\|_2$
by QR/SVD on $(\tilde G,\tilde\delta)$.

\subsection{Regularization (Tikhonov) and filter factors}
When $G$ is ill-conditioned or noisy, use zero-order Tikhonov:
\begin{equation}
\varepsilon_\lambda=(G^\top W G+\lambda I)^{-1}G^\top W \delta,\qquad \lambda>0.
\label{eq:tikhonov}
\end{equation}
With $\tilde G=C G$ ($C=W^{1/2}$) and SVD $\tilde G=U\Sigma V^\top$,
\begin{equation}
\varepsilon_\lambda=V\,\underbrace{\mathrm{diag}\!\Big(
\frac{\sigma_i}{\sigma_i^2+\lambda}\Big)}_{=:F_\lambda(\Sigma)}\,U^\top\,\tilde\delta,
\label{eq:filter_factors}
\end{equation}
showing the \emph{filter factors} $f_i(\lambda)=\sigma_i/(\sigma_i^2+\lambda)$
that suppress small singular directions.

\paragraph{Choosing $\lambda$ (falsifiable rules).}
\begin{itemize}
\item \textbf{Discrepancy principle:} pick $\lambda$ s.t.
$\|W^{1/2}(G\varepsilon_\lambda-\delta)\|_2 \approx \sqrt{m}\,\sigma_\eta$
for noise level $\sigma_\eta$.
\item \textbf{L-curve:} choose the corner of $\big(\log\|G\varepsilon_\lambda-\delta\|,
\ \log\|\varepsilon_\lambda\|\big)$.
\item \textbf{GCV (if cross-validation feasible):} minimize the generalized
cross-validation score for WLS.
\end{itemize}

\subsection{Backward/forward errors and residual diagnostics}
Let $r:=G\hat\varepsilon-\delta$ and define the weighted residual norm
$\|r\|_W=\|W^{1/2}r\|_2$.

\paragraph{Forward error proxy.}
If a ground truth is unknown, estimate sensitivity by
\[
\mathrm{Amplification} := \|\tilde G^{\dagger}\|_2 \quad\text{with}\quad
\tilde G=W^{1/2}G.
\]

\paragraph{Backward error (square case).}
The minimal perturbation $(\Delta A,\Delta\delta)$ such that
$(A+\Delta A)\hat\varepsilon=\delta+\Delta\delta$ obeys
\[
\frac{\|\Delta\delta\|_2}{\|\delta\|_2}
\ \le\ \frac{\|r\|_2}{\|A\|_2\,\|\hat\varepsilon\|_2+\|\delta\|_2}.
\]

\paragraph{Leverage and influence (overdetermined).}
Define the \emph{hat matrix}
\[
H:=G(G^\top W G)^{-1}G^\top W=\tilde G\,\tilde G^\dagger,
\]
then $h_{ii}$ (diagonal of $H$) measures the leverage of equation $i$.
Standardized residuals $s_i:=r_i/\sqrt{(1-h_{ii})\,\hat\sigma^2}$ flag outliers
(with $\hat\sigma^2$ estimated from $\|r\|_W^2/(m-4)$).

\subsection{Uncertainty propagation (local, dimensionless)}
If $\delta$ carries noise with covariance $\mathrm{Cov}(\delta)=\Sigma$ and
$W=\Sigma^{-1}$, then the WLS covariance is
\begin{equation}
\mathrm{Cov}(\hat\varepsilon)\approx (G^\top W G)^{-1}.
\label{eq:cov_WLS}
\end{equation}
If $\Sigma=\sigma_\eta^2\,W^{-1}$ (homoscedastic in $W$-metric),
\(
\mathrm{Cov}(\hat\varepsilon)\approx \sigma_\eta^2\,(G^\top W G)^{-1}.
\)

\subsection{Numerical solvers and recommendations}
\begin{enumerate}
\item \textbf{Square:} use QR or LU with equilibration; verify residual and
backward error. Avoid forming $A^{-1}$ explicitly in floating point unless needed.
\item \textbf{WLS:} form $\tilde G=W^{1/2}G$; solve by QR/SVD; avoid normal
equations if conditioning is marginal.
\item \textbf{Tikhonov:} prefer SVD route when $\kappa_2(\tilde G)$ is large;
use filter factors \eqref{eq:filter_factors}.
\item \textbf{Diagnostics:} always report $\|r\|_W$, $\sigma_{\min}(\tilde G)$,
$\kappa_2(\tilde G)$, and, when applicable, leverage $h_{ii}$.
\end{enumerate}

\subsection{Falsifiable test plan (local-only)}
\begin{enumerate}
\item \emph{Noise scaling:} inject Gaussian noise with known $\sigma_\eta$;
verify $\|W^{1/2}(G\hat\varepsilon-\delta)\|_2\approx \sqrt{m}\,\sigma_\eta$
(discrepancy) and empirical coverage from \eqref{eq:cov_WLS}.
\item \emph{Ill-conditioning:} synthesize $G$ with a controlled singular value
drop; show that Tikhonov improves stability and that the error follows
filter factors.
\item \emph{Outlier resistance:} flip a small subset of equations; leverage
and standardized residuals flag them; refit after downweighting.
\end{enumerate}

\subsection{Compact algorithms (pseudo-code)}
\paragraph{WLS via QR (local, dimensionless).}
\begin{enumerate}
\item Build $\tilde G=W^{1/2}G$, $\tilde\delta=W^{1/2}\delta$.
\item Compute $\tilde G=Q R$ (thin QR); solve $R\hat\varepsilon=Q^\top\tilde\delta$.
\item Diagnostics: residual $\|Q^\top(\tilde G\hat\varepsilon-\tilde\delta)\|_2$,
$\sigma_{\min}$ via $\mathrm{chol}(R^\top R)$ or SVD if needed.
\end{enumerate}

\paragraph{Tikhonov via SVD.}
\begin{enumerate}
\item SVD: $\tilde G=U\Sigma V^\top$.
\item Choose $\lambda$ (discrepancy/L-curve/GCV).
\item Compute $\varepsilon_\lambda=V F_\lambda(\Sigma)U^\top\tilde\delta$.
\end{enumerate}

\paragraph{Square solve with backward error.}
\begin{enumerate}
\item Solve $A\hat\varepsilon=\delta$ (QR/LU).
\item Compute $r=A\hat\varepsilon-\delta$ and backward error proxy
$\eta=\|r\|_2 / (\|A\|_2\|\hat\varepsilon\|_2+\|\delta\|_2)$.
\item If $\eta$ exceeds tolerance, apply equilibration or switch to WLS/Tikhonov.
\end{enumerate}

\paragraph{Takeaway.}
The seed closure admits robust, dimensionless solvers with quantifiable
sensitivity, diagnostics, and uncertainty. QR/SVD with WLS/Tikhonov gives
portable routines that respect the governance rules and remain K-free/local-only.
