\section{Well-Posedness \& Regularity at Field Level (Deterministic \& Stochastic)}

\subsection{Model, domain, and boundary conditions}
Let $\Omega\subset\mathbb R^d$ be a bounded $C^{1,1}$ domain or a torus $\mathbb T^d$.
We consider the telegraph-stable core with admissible sources (Ch.~9)
\begin{equation}
\tau\,\partial_t^2\Psi + \partial_t\Psi - c^2\nabla^2\Psi
= \mathsf S(\Psi,\varphi;\varepsilon,\delta) \quad \text{in } \Omega\times(0,T],
\label{eq:telegraph11}
\end{equation}
with initial data $(\Psi,\partial_t\Psi)|_{t=0}=(\Psi_0,\Psi_1)$ and one of:
(i) periodic BC on $\mathbb T^d$,
(ii) homogeneous Neumann $\partial_n\Psi=0$ on $\partial\Omega$,
(iii) Dirichlet $\Psi=\Psi_{\mathrm{bc}}$ on $\partial\Omega$.
All coefficients are dimensionless (Option~A; hats suppressed).

\subsection{Function spaces and weak formulation}
Write $H=L^2(\Omega)$, $V=H^1(\Omega)$ with the usual norms; when Dirichlet BC is used,
replace $V$ by $H_0^1(\Omega)$. Let $\langle\cdot,\cdot\rangle$ be the $H$ inner product.
A weak solution on $[0,T]$ satisfies, for all $\phi\in V$ and a.e.\ $t$,
\[
\langle \tau\,\partial_t^2\Psi + \partial_t\Psi,\phi\rangle
+ c^2\int_\Omega \nabla\Psi\cdot\nabla\phi\,dx
= \int_\Omega \mathsf S(\Psi,\varphi;\varepsilon,\delta)\,\phi\,dx,
\]
with $\Psi\in L^\infty(0,T;V)$, $\partial_t\Psi\in L^\infty(0,T;H)$, and
$\partial_t^2\Psi\in L^2(0,T;V')$.

\subsection{Assumptions on the source grammar (local-only)}
All source components are \emph{local} and satisfy:
\begin{enumerate}
\item \textbf{Causality}: depend on $(\mathbf x,t)$ and its past only.
\item \textbf{Lipschitz} on bounded subsets of $(\Psi,\nabla\Psi,\partial_t\Psi)$:
there exists $L>0$ s.t.
$\|\mathsf S(u)-\mathsf S(v)\|_{H}\le L\,\|u-v\|_{V\times H}$.
\item \textbf{Passivity/small-gain}: either saturating nonlinearity or small-gain
bounds ensuring the Energy--Coherence budget (Ch.~10) holds, keeping $\Re s<0$.
\end{enumerate}

\subsection{Deterministic well-posedness}
\begin{theorem}[Existence and uniqueness]
Assume $\tau>0$, $c>0$, admissible BC, initial data $(\Psi_0,\Psi_1)\in V\times H$,
and a source $\mathsf S$ satisfying the Lipschitz and passivity conditions above.
Then there exists a unique weak solution
\[
\Psi \in L^\infty(0,T;V),\qquad
\partial_t\Psi\in L^\infty(0,T;H),\qquad
\partial_t^2\Psi\in L^2(0,T;V'),
\]
depending continuously on the data. If $\mathsf S$ is $C^1$ and
$(\Psi_0,\Psi_1)\in H^2(\Omega)\cap V \times V$, then $\Psi$ is a strong solution
with $\Psi\in C([0,T];H^2\cap V)$ and $\partial_t\Psi\in C([0,T];V)$.
\end{theorem}

\begin{proof}[Energy method (sketch)]
Multiply \eqref{eq:telegraph11} by $\partial_t\Psi$ and integrate over $\Omega$;
integration by parts (compatible with each BC) yields the coherence budget
\[
\dot E_{\text{coh}}(t)
= -\int_\Omega \big(\tau\,|\partial_t^2\Psi|^2 + |\partial_t\Psi|^2\big)\,dx
+ \int_\Omega \partial_t\Psi\,\mathsf S\,dx,
\]
where $E_{\text{coh}}$ is as in Ch.~10. Passivity/small-gain makes the source
term controlled; Grönwall then gives a priori bounds and uniqueness by difference
estimates. Galerkin or semigroup approximations provide existence.
\end{proof}

\subsection{Mild formulation and semigroup viewpoint}
Let $\mathcal A=\begin{psmallmatrix}0&I\\ c^2\Delta & -\tau^{-1}I\end{psmallmatrix}$
on $\mathcal X=V\times H$ with domain $D(\mathcal A)=\{(u,v):u\in H^2\cap V,\,v\in V\}$.
Then $\partial_t Z=\mathcal A Z + \mathcal N(Z)$ with
$Z=(\Psi,\partial_t\Psi)$ and $\mathcal N(Z)=(0,\tau^{-1}\mathsf S)$
admits a (nonlinear) variation-of-constants formula
\[
Z(t)=e^{t\mathcal A}Z(0)+\int_0^t e^{(t-s)\mathcal A}\,\mathcal N(Z(s))\,ds,
\]
equivalent to the spectral/Green representation (Ch.~7) under the same BCs.

\subsection{Regularity and bootstraps}
If $\mathsf S$ is $C^k$ in $\Psi$ with bounded derivatives on bounded sets,
and data are smoother, standard elliptic/energy bootstraps give
\[
(\Psi_0,\Psi_1)\in H^{m+1}\times H^m \ \Rightarrow\
\Psi\in C([0,T];H^{m+1})\cap C^1([0,T];H^{m}),
\]
subject to compatibility conditions at $t=0$ for Dirichlet BC.
For periodic/Neumann BC, similar gains hold modulo constants.

\subsection{Stochastic well-posedness (additive, causal noise)}
Consider
\[
\tau\,\partial_t^2\Psi + \partial_t\Psi - c^2\nabla^2\Psi
= \mathsf S(\Psi,\varphi;\varepsilon,\delta) + \xi(\mathbf x,t),
\]
with $\xi$ zero-mean, white-in-time, $L^2$-valued noise:
$\mathbb E[\xi(\cdot,t)]=0$,
$\mathbb E[\langle \xi(t),\phi\rangle\,\langle \xi(t'),\psi\rangle]
= 2\langle Q\phi,\psi\rangle\,\delta(t-t')$ for a bounded, nonnegative $Q$.
A mild (stochastic) solution on $[0,T]$ satisfies
\[
Z(t)=e^{t\mathcal A}Z(0)+\int_0^t e^{(t-s)\mathcal A}\,\mathcal N(Z(s))\,ds
+\int_0^t e^{(t-s)\mathcal A}\,(0,\tau^{-1}\,dW_Q(s)),
\]
where $W_Q$ is a $Q$-Wiener process. Under the same Lipschitz/small-gain bounds,
one obtains existence/uniqueness in $L^2(\Omega; \mathcal X)$ and
\[
\mathbb E\,E_{\text{coh}}(t)\ +\ \mathbb E\!\int_0^t \!\!\!\int_\Omega
\big(\tau\,|\partial_t^2\Psi|^2+|\partial_t\Psi|^2\big)\,dx\,ds
\ \le\ C\big( \mathbb E\,E_{\text{coh}}(0) + t\,\mathrm{Tr}\,Q \big).
\]

\subsection{Continuous dependence and stability}
Let $\Psi^{(1)}$, $\Psi^{(2)}$ solve \eqref{eq:telegraph11} with data/sources
differing by at most $\delta$ in $V\times H$ and $L^2(0,T;H)$. Then
\[
\|\Psi^{(1)}-\Psi^{(2)}\|_{L^\infty(0,T;V)}^2
+\|\partial_t\Psi^{(1)}-\partial_t\Psi^{(2)}\|_{L^\infty(0,T;H)}^2
\ \le\ C_T\,\delta^2,
\]
where $C_T$ depends on $(\tau,c)$ and the Lipschitz constants of $\mathsf S$.

\subsection{Compatibility with residual and phase layers}
The above analysis is \emph{local-only} and K-free: the source grammar does not
depend on nonlocal parameters. The Energy--Coherence budget used here matches
Ch.~10; residual-space dissipation (Ch.~5) and phase coupling (Ch.~8) are
admissible via the small-gain/saturation constraints (Ch.~9) and do not violate
the $\Re s<0$ window.

\paragraph{Takeaway.}
Under standard BCs and local admissibility assumptions, the telegraph field
admits unique (weak/strong/mild) solutions with energy control, stability, and
regularity compatible with the rest of the monograph. The stochastic extension
inherits the same structure at the level of expectations.
