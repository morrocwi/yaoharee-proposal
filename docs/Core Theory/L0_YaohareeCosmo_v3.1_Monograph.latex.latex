\section{Stochastic Forcing \& Uncertainty Quantification in Residual/Field Layers}

\subsection{SPDE model (local-only, Option A)}
Let $\Psi(\mathbf x,t)$ satisfy the telegraph-stable core with admissible sources (Ch.~9--11) and additive local noise:
\begin{equation}
\tau\,\partial_t^2\Psi + \partial_t\Psi - c^2\nabla^2\Psi
= \mathsf S(\Psi,\varphi;\varepsilon,\delta) \;+\; \xi(\mathbf x,t),
\qquad \mathbb E[\xi]=0,
\label{eq:spde_core}
\end{equation}
where $\xi$ is white-in-time, $L^2(\Omega)$-valued, with spatial covariance operator $Q$:
\[
\mathbb E\big[\langle\xi(t),\phi\rangle \langle\xi(t'),\psi\rangle\big]
= 2\,\langle Q\phi,\psi\rangle\,\delta(t-t').
\]
All coefficients and statistics are \emph{local-only}, dimensionless, and respect Option~A (rad/s).

\subsection{Mild/semigroup formulation and energy in expectation}
Setting $Z=(\Psi,\partial_t\Psi)$ and $\mathcal A$ as in Ch.~11, the mild solution is
\[
Z(t)=e^{t\mathcal A}Z(0)+\int_0^t e^{(t-s)\mathcal A}\,\mathcal N(Z(s))\,ds
+\int_0^t e^{(t-s)\mathcal A}\,(0,\tau^{-1}\,dW_Q(s)),
\]
with $W_Q$ a $Q$-Wiener process and $\mathcal N(Z)=(0,\tau^{-1}\mathsf S)$.
Define the coherence energy $E_{\text{coh}}(t)$ as in Ch.~10. Under the admissibility rules (Ch.~9),
\begin{equation}
\mathbb E\,E_{\text{coh}}(t)
\;+\;\mathbb E\!\int_0^t \!\!\int_\Omega \big(\tau\,|\partial_t^2\Psi|^2+|\partial_t\Psi|^2\big)\,dx\,ds
\;\le\; C\Big(\mathbb E\,E_{\text{coh}}(0)+ t\,\mathrm{Tr}_{H} Q\Big),
\label{eq:exp_energy}
\end{equation}
so energy remains bounded in expectation with growth controlled by $\mathrm{Tr}\,Q$.

\subsection{Local stochastic models (additive, multiplicative, colored)}
While \eqref{eq:spde_core} uses additive noise, two local variants are common:
\begin{align}
\text{Multiplicative: }&
\tau\,\partial_t^2\Psi+\partial_t\Psi-c^2\nabla^2\Psi
= \mathsf S(\Psi,\varphi;\varepsilon,\delta)
+ \sigma(\Psi)\,\xi(\mathbf x,t),\label{eq:mult_noise}\\
\text{Colored-in-time: }&
\xi=\dot\eta,\quad \dot\eta=-\gamma_\eta\,\eta + \sqrt{2\gamma_\eta}\,\zeta,
\label{eq:colored}
\end{align}
where $\sigma(\Psi)$ is bounded/Lipschitz, $\gamma_\eta>0$, and $\zeta$ is white-in-time, local. Both preserve locality and, under small-gain bounds, the telegraph window $\Re s<0$.

\subsection{Residual-layer uncertainty: propagation and intervals}
Let $r=G\varepsilon-\delta$ with $W=\Sigma^{-1}\succeq0$ (Ch.~13--15).
\paragraph{Gaussian model (local covariance).}
If $\delta\sim \mathcal N(\bar\delta,\Sigma)$ and $\mathrm{rank}(G)=4$, the WLS estimator
\[
\hat\varepsilon=(G^\top W G)^{-1}G^\top W \delta
\]
has local covariance
\begin{equation}
\mathrm{Cov}(\hat\varepsilon)=(G^\top W G)^{-1}.
\label{eq:cov_eps}
\end{equation}
Hence $(\hat\varepsilon-\varepsilon)^\top (G^\top W G)(\hat\varepsilon-\varepsilon)$ is asymptotically $\chi^2_4$, producing local ellipsoidal intervals.

\paragraph{Tikhonov/LM adjustment.}
For $\varepsilon_\lambda=(G^\top W G+\lambda I)^{-1}G^\top W \delta$, use the sandwich form
\[
\widehat{\mathrm{Cov}}(\varepsilon_\lambda)\approx
(G^\top W G+\lambda I)^{-1}(G^\top W G)(G^\top W G+\lambda I)^{-1},
\]
or SVD-based filter-factor propagation (Ch.~13).

\paragraph{Robust (IRLS) surrogates.}
With IRLS weights $\hat W=\mathrm{diag}(w_i/\sigma_i^2)$, adopt the Godambe/sandwich estimator
\[
\widehat{\mathrm{Cov}}(\hat\varepsilon)\approx
(G^\top \hat W G)^{-1}\Big(G^\top \hat W\,\widehat S\,\hat W G\Big)(G^\top \hat W G)^{-1},
\quad \widehat S=\sum_i r_i^2 e_i e_i^\top .
\]

\subsection{Linearized covariance for the field (local, short-time)}
Around a reference trajectory $\bar\Psi$, linearize the source $\mathsf S$ and write the first-variation system
\[
\tau\,\partial_t^2 \tilde\Psi + \partial_t\tilde\Psi - c^2\nabla^2\tilde\Psi
= \mathcal L(t)\,\tilde\Psi + \xi,
\]
with bounded local operator $\mathcal L(t)$. Let $\mathcal C(t)=\mathbb E[\tilde Z\otimes\tilde Z]$ be the covariance of $\tilde Z=(\tilde\Psi,\partial_t\tilde\Psi)$. Then formally
\[
\dot{\mathcal C}=\mathcal A \mathcal C + \mathcal C \mathcal A^\ast + \mathcal B \mathcal Q \mathcal B^\ast
\]
(Lyapunov-type equation) on a truncated modal basis (e.g., eigenmodes or grid modes), where $\mathcal B$ injects the noise into the velocity component. This gives local, short-time covariance surrogates for $\Psi$.

\subsection{Ensemble UQ (local-only)}
Define an ensemble $\{\Psi^{(s)}\}_{s=1}^S$ by sampling local noise realizations consistent with $Q$ and (if needed) local priors for sources. Report ensemble statistics:
\[
\bar\Psi=\tfrac{1}{S}\sum_s \Psi^{(s)},\qquad
\mathrm{Var}[\Psi]=\tfrac{1}{S-1}\sum_s \big(\Psi^{(s)}-\bar\Psi\big)^2,
\]
and propagate to coherence energy and locking indices:
\[
\mathbb E[E_{\text{coh}}],\ \mathrm{Var}[E_{\text{coh}}],\quad
\mathbb E[\rho_{\mathrm{lock}}],\ \mathbb E[\chi_{\mathrm{lock}}].
\]
All sampling is local and dimensionless; seeds and windows are recorded for reproducibility.

\subsection{Local Bayesian view (hat-frame, non-circular)}
At a fixed space--time location (or short window), combine a local prior $p(\varepsilon)$ with the likelihood induced by $\delta\mid \varepsilon \sim \mathcal N(G\varepsilon,\Sigma)$ to obtain
\[
p(\varepsilon\mid \delta)\ \propto\ \exp\!\Big(-\tfrac12\|G\varepsilon-\delta\|_{W}^2\Big)\,p(\varepsilon).
\]
For Gaussian priors $\mathcal N(\mu_0,\Gamma_0)$, the posterior is Gaussian with
\[
\Gamma^{-1} = G^\top W G + \Gamma_0^{-1},\qquad
\mu= \Gamma\,(G^\top W \delta + \Gamma_0^{-1}\mu_0).
\]
All are computed locally; no global $K$ is introduced.

\subsection{Uncertainty on diagnostics and locking}
Report confidence intervals for
\[
E_{\text{coh}},\quad V=\tfrac12 r^\top W r,\quad
\rho_{\mathrm{lock}},\ \chi_{\mathrm{lock}},
\]
via ensemble quantiles or linearized variance propagation. In the locking regime, verify
\begin{equation}
\frac{d}{dt}\,\mathbb E[V]\ \le\ 0,
\qquad
\mathrm{Var}[V]\ \text{bounded on } [0,T],
\label{eq:locking_uq}
\end{equation}
modulo admissible parametric work (Ch.~10).

\subsection{Calibration to $\Omega_0$ and $W_0$ (Option A)}
Frequencies are reported in rad/s with anchor $\Omega_0$; use $f_0=\Omega_0/(2\pi)$ only for figures. Decompose
\[
W=W_0\,\widetilde W,\qquad \Lambda=\lambda_0\,\widetilde\Lambda,
\]
and choose $(W_0,\lambda_0)$ so that (i) whitened residuals satisfy $\mathbb E[\|W^{1/2}r\|_2^2]\approx m$ per window, and (ii) desired mean decay of $V$ is achieved.

\subsection{Falsifiable UQ tests (governance-compliant)}
\begin{enumerate}
\item \textbf{Energy in expectation:} with fixed $Q$, verify \eqref{eq:exp_energy} by measuring $\mathbb E[E_{\text{coh}}(t)]$ over ensembles; \emph{fail} if growth exceeds the predicted $C\,t\,\mathrm{Tr}\,Q$ scaling.
\item \textbf{Coverage of $\hat\varepsilon$:} for Gaussian data, check empirical coverage of ellipsoids from \eqref{eq:cov_eps}; \emph{fail} if under/over-coverage persists beyond tolerance.
\item \textbf{IRLS robustness:} contaminate a fraction of $\delta$; IRLS-based sandwich covariance should stabilize intervals (bounded influence); \emph{fail} if intervals collapse or inflate uncontrollably.
\item \textbf{Ensemble consistency:} increase $S$; monitor convergence of ensemble moments (LLN). \emph{Fail} if moments drift with $S$ beyond sampling error.
\end{enumerate}

\subsection{Reproducibility kit (local-only)}
For each UQ run, publish: noise seeds, window definitions, $Q$ (or its discretization), $(W_0,\lambda_0)$, solver options (CN/IMEX/Newmark), and time series of
\[
\{E_{\text{coh}},\,V,\,\rho_{\mathrm{lock}},\,\chi_{\mathrm{lock}}\}
\]
with ensemble means and quantiles.

\paragraph{Takeaway.}
Local stochastic models compatible with the telegraph core and the residual algebra provide quantitative, falsifiable uncertainty bounds. Expectation energy control, ensemble or linearized covariance, and robust residual statistics yield a portable UQ practice that remains dimensionless, K-free, and non-circular from data to fields.
